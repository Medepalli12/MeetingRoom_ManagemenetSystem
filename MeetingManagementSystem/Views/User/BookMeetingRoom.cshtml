@model IEnumerable<MeetingManagementSystem.Models.MeetingRoom>

@{
    ViewBag.Title = "BookMeetingRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.roomid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.facilities)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageurl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costperday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capacity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.roomid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.venue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.facilities)
        </td>
        <td>
            <img src=~/photos/@Html.DisplayFor(modelItem =>item.imageurl) alt="" width="140" height="110" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costperday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capacity)
        </td>
        <td>
           
            @Html.ActionLink("Book Room", "BookRoom", new { roomid = item.roomid })
        </td>
    </tr>
}

</table>
