@model IEnumerable<MeetingManagementSystem.Models.FoodCombo>

@{
    ViewBag.Title = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meeting room is booked succussfully, You can Add the food from below list.</h2>
<br />
<table>
    <tr>
        <td>
            <h2>Indian Food</h2>
        </td>
        <td>
           < h2>Chhole Bhature</h2>
        </td>
    </tr>
    <tr>
        <td>
            <h2>Chinese Food</h2>
        </td>
        <td>
            <h2>Chicken and Waffles</h2>
        </td>
    </tr>
    <tr>
        <td>
            <h2>Italian Food</h2>
        </td>
