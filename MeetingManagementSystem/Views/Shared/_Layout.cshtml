<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size: 14px;">
                    @if (Session["userid"] == null && Session["adminid"] == null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Admin Login", "AdminLogin", "Admin")</li>
                        <li>@Html.ActionLink("User Registration", "RegisterUser", "User")</li>
                        <li>@Html.ActionLink("User Login", "UserLogin", "User")</li>
                    }
                    @if (Session["userid"] != null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Book Meeting-Room", "BookMeetingRoom", "User")</li>
                        <li>@Html.ActionLink("Manage Bookings", "ManageBookings", "User")</li>
                        <li>@Html.ActionLink("Update Password", "UpdatePassword", "User")</li>
                        <li>@Html.ActionLink("Logout", "logout", "User")</li>
                    }
                    @if (Session["adminid"] != null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Add Meeting Room", "AddRoom", "Admin")</li>
                        <li>@Html.ActionLink("Add FoodCombo", "AddFoodCombo", "Admin")</li>
                        <li>@Html.ActionLink("Manage FoodCombo", "ManageFoodCombo", "Admin")</li>
                        <li>@Html.ActionLink("Manage Meeting-Rooms", "ManageRoom", "Admin")</li>
                        <li>@Html.ActionLink("View Bookings", "ViewBookings", "Admin")</li>
                        <li>@Html.ActionLink("Update Password", "UpdatePassword", "Admin")</li>

                        <li>@Html.ActionLink("Logout", "logout", "Admin")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
