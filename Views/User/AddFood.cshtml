@model IEnumerable<MeetingManagementSystem.Models.FoodCombo>

@{
    ViewBag.Title = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.foodid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.food1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.food2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.food3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costperperson)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.foodid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.food1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.food2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.food3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costperperson)
        </td>
        
        <td>
            
            @Html.ActionLink("Add Food", "BookFood", new { foodid = item.foodid })
        </td>
    </tr>
}

</table>
